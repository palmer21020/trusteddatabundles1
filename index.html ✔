<script>
function placeOrder(){
    const payload = {
        api_key: "28725d538f64293bcaf1c2f4dbc15767",
        phone: document.getElementById("phone").value,
        size_mb: document.getElementById("size").value,
        network: document.getElementById("network").value,
        reference: "REF" + Date.now(),
        webhook_url: "https://yourdomain.com/api/webhook"
    };

    fetch("https://spfastit.com/wp-json/custom-api/v1/place-order", {
        method:"POST",
        headers:{ "Content-Type":"application/json" },
        body: JSON.stringify(payload)
    })
    .then(r=>r.json())
    .then(res=>{
        alert("Order sent! Response: " + JSON.stringify(res));
    });
}

function topUp(){
    let amt = parseFloat(document.getElementById("amount").value);

    if(amt < 10){
        alert("Minimum top-up is GHC 10");
        return;
    }

    alert("MoMo top-up coming soon (backend will be added).");
}
</script>

